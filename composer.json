{
    "name": "cashier-provider/core",
    "description": "Cashier provides an expressive, fluent interface to manage billing services.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "bank",
        "billing",
        "cashier",
        "payments"
    ],
    "authors": [
        {
            "name": "Andrey Helldar",
            "email": "helldar@ai-rus.com"
        }
    ],
    "support": {
        "issues": "https://github.com/cashier-provider/core/issues",
        "source": "https://github.com/cashier-provider/core"
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "doctrine/dbal": "^2.6 || ^3.0",
        "dragon-code/contracts": "^2.10",
        "dragon-code/laravel-support": "^3.1",
        "dragon-code/simple-data-transfer-object": "^2.0",
        "dragon-code/support": "^5.2",
        "guzzlehttp/guzzle": "^6.5 || ^7.0",
        "illuminate/broadcasting": "^6.0 || ^7.0 || ^8.0",
        "illuminate/console": "^6.0 || ^7.0 || ^8.0",
        "illuminate/contracts": "^6.0 || ^7.0 || ^8.0",
        "illuminate/database": "^6.0 || ^7.0 || ^8.0",
        "illuminate/queue": "^6.0 || ^7.0 || ^8.0",
        "illuminate/support": "^6.0 || ^7.0 || ^8.0",
        "psr/http-message": "^1.0",
        "ramsey/uuid": "^3.7 || ^4.0",
        "symfony/http-kernel": "^4.0 || ^5.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0 || ^5.0 || ^6.0",
        "phpunit/phpunit": "^9.0",
        "symfony/var-dumper": "^4.0 || ^5.0"
    },
    "suggest": {
        "cashier-provider/cash": "Driver for managing cash payments in the Cashier Provider ecosystem",
        "cashier-provider/sber-qr": "Driver for payment with QR codes via Sber",
        "cashier-provider/tinkoff-qr": "Driver for payment with QR codes via Tinkoff"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "CashierProvider\\Core\\": "src"
        },
        "classmap": [
            "polyfill"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "CashierProvider\\Core\\Providers\\ServiceProvider",
                "CashierProvider\\Core\\Providers\\ObserverServiceProvider"
            ]
        }
    }
}
